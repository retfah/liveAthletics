    {value: 10, text: "<%= __('Round defined') %>", backgroundColor:"#444444", textColor:"#FFFFFF"}, // planned
    {value: 15, text: "<%= __('Roll call printed') %>", backgroundColor:"#696969", textColor:"#FFFFFF"},
    {value: 50, text: "<%= __('Roll call finished') %>", backgroundColor:"#bdbdbd", textColor:"#FFFFFF"}, 
    
    {value: 70, text: "<%= __('Editing Start List') %>", backgroundColor:"#c4003b", textColor:"#FFFFFF"}, // the overlay for the initial series setting shall only be possible when the state is editing startlist 
    {value: 90, text: "<%= __('Start List finished') %>", backgroundColor:"#c96382", textColor:"#FFFFFF"},
    {value: 95, text: "<%= __('Start List official') %>", backgroundColor:"#c404c7", textColor:"#FFFFFF"},
    {value: 140, text: "<%= __('In progress') %>", backgroundColor:"#c1c400", textColor:"#000000"}, 
    {value: 180, text: "<%= __('Finished') %>", backgroundColor:"#58d91c", textColor:"#FFFFFF"},
    {value: 200, text: "<%= __('Results Official') %>", backgroundColor:"#399c0b", textColor:"#FFFFFF"},
    {value: 230, text: "<%= __('Certificate printed') %>", backgroundColor:"#0b819c", textColor:"#FFFFFF"}
],

